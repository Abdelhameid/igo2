:host {
  display: -webkit-flex; /* Safari */
  -webkit-flex-direction: column; /* Safari 6.1+ */
  display: flex;
  height: 100%;
  width: 100%;
}

.igo-flexible-main {
  flex: 0 0 auto;
  -webkit-flex: 0 0 auto;  /* Safari 6.1+ */
  overflow: hidden;
}

.igo-flexible-main.column {
  transition: height 0.25s ease-in;
}

.igo-flexible-main.row {
  transition: width 0.25s ease-in;
}

.igo-flexible-fill {
  flex: 1 1 auto;
  -webkit-flex: 1 1 auto;  /* Safari 6.1+ */
  overflow: hidden;
  position: relative;
}

.igo-flexible-fill > div {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
